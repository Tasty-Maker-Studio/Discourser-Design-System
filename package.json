{
  "name": "@discourser/design-system",
  "version": "0.2.0",
  "description": "Aesthetic-agnostic design system with Panda CSS and Ark UI",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "styled-system": [
        "./styled-system/types/index.d.ts"
      ],
      "styled-system/*": [
        "./styled-system/*/index.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styled-system": {
      "types": "./styled-system/types/index.d.ts",
      "import": "./styled-system/index.mjs",
      "require": "./styled-system/index.js"
    },
    "./styled-system/css": {
      "types": "./styled-system/css/index.d.ts",
      "import": "./styled-system/css/index.mjs",
      "require": "./styled-system/css/index.js"
    },
    "./styled-system/tokens": {
      "types": "./styled-system/tokens/index.d.ts",
      "import": "./styled-system/tokens/index.mjs",
      "require": "./styled-system/tokens/index.js"
    },
    "./styled-system/recipes": {
      "types": "./styled-system/recipes/index.d.ts",
      "import": "./styled-system/recipes/index.mjs",
      "require": "./styled-system/recipes/index.js"
    }
  },
  "files": [
    "dist",
    "styled-system"
  ],
  "scripts": {
    "dev": "pnpm docs:generate && storybook dev -p 6006",
    "build": "pnpm build:panda && pnpm build:lib",
    "build:panda": "panda codegen",
    "build:lib": "tsup",
    "build:storybook": "pnpm docs:generate && storybook build",
    "prepare": "husky",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "tokens:generate": "tsx scripts/generate-palette.ts",
    "tokens:sync": "tsx scripts/sync-tokens.ts",
    "tokens:full": "pnpm tokens:generate && pnpm build:panda",
    "docs:generate": "tsx scripts/generate-storybook-docs.ts",
    "typecheck": "tsc --noEmit",
    "changeset": "changeset",
    "version": "changeset version",
    "ci:version": "pnpm exec changeset version",
    "release": "pnpm build && changeset publish --access public"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "dependencies": {
    "@ark-ui/react": "^5.30.0",
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.0.0",
    "@material/material-color-utilities": "^0.3.0",
    "@pandacss/dev": "^1.8.0",
    "@storybook/addon-a11y": "^8.5.0",
    "@storybook/addon-essentials": "^8.5.0",
    "@storybook/addon-styling": "^1.3.7",
    "@storybook/react": "^8.5.0",
    "@storybook/react-vite": "^8.5.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/ui": "^2.1.9",
    "axe-core": "^4.11.0",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.1.7",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.3.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "storybook": "^8.5.0",
    "tsup": "^8.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vitest": "^2.1.0"
  },
  "keywords": [
    "design-system",
    "panda-css",
    "ark-ui",
    "material-design-3",
    "react",
    "components"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Tasty-Maker-Studio/Discourser-Design-System.git"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
