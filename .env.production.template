# Production Environment Configuration Template
# Copy this file to .env.production and fill in your production values

# Core API Keys (Required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
PINECONE_INDEX_NAME=your_pinecone_index_name_here

# Optional API Keys
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_TRACING_V2=true

# Application Configuration
NEXT_PUBLIC_APP_URL=https://your-domain.com
NODE_ENV=production

# Redis Configuration
REDIS_PROVIDER=upstash
UPSTASH_REDIS_REST_URL=https://your-upstash-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token_here

# Alternative Redis Providers
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password_here
# REDIS_USERNAME=your_redis_username_here
# REDIS_DB=0

# Redis Connection Settings
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000

# TLS Configuration (for cloud providers)
REDIS_TLS_ENABLED=true
REDIS_TLS_REJECT_UNAUTHORIZED=true
# REDIS_TLS_CA=path_to_ca_cert
# REDIS_TLS_CERT=path_to_client_cert
# REDIS_TLS_KEY=path_to_client_key
# REDIS_TLS_SERVERNAME=your_redis_server_name

# Queue Configuration
QUEUE_REMOVE_ON_COMPLETE=10
QUEUE_REMOVE_ON_FAIL=50
QUEUE_MAX_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=2000
QUEUE_CONCURRENCY=5

# Monitoring Thresholds
MONITORING_HEALTH_CHECK_INTERVAL=30000
MONITORING_PERFORMANCE_ALERT_THRESHOLD=2000
MONITORING_MEMORY_ALERT_THRESHOLD=85
MONITORING_QUEUE_SIZE_ALERT=100
MONITORING_ERROR_RATE_THRESHOLD=5

# External Service Timeouts (milliseconds)
ANTHROPIC_REQUEST_TIMEOUT=30000
OPENAI_REQUEST_TIMEOUT=30000
PINECONE_REQUEST_TIMEOUT=30000
SUPABASE_REQUEST_TIMEOUT=15000

# Processing Pipeline Benchmarks
PROCESSING_EMBEDDING_TIMEOUT=30000
PROCESSING_SYNC_TIMEOUT=30000
PROCESSING_TOPIC_DRIFT_TIMEOUT=500
PROCESSING_SUCCESS_RATE_THRESHOLD=99

# Configuration Hot-Reloading
CONFIG_ENABLE_HOT_RELOAD=false
CONFIG_RELOAD_INTERVAL=60000